%% UI UML
classDiagram
    %% Interfaces
    class ViewProvider~T = CreateComponent~ {
        <<interface>>
        create() Vec~T~*
    }

    class ResponseComponentView {
        <<interface>>
        create_reply() CreateReply
        create_message() CreateMessage
    }

    class AttachableView~T = CreateComponent~ {
        <<interface>>
        attach(&mut Vec~T~)
    }

    class InteractableComponentView~T = Action~ {
        <<interface>>
        listen_once(ctx, timeout) Option~T, ComponentInteraction~
        stream(ctx, timeout) impl Stream~T, ComponentInteraction~
        handle(interaction) Option~T~
    }

    class Action {
        <<interface>>
        ALL &'static [&'static str]
        as_str() &'static str
    }

    %% Interface Relationships
    ResponseComponentView --|> ViewProvider
    AttachableView --|> ViewProvider
    InteractableComponentView --|> AttachableView

